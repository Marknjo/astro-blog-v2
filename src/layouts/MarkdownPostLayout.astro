---
import { Image } from "astro:assets";
import Tags from "../components/Tags.astro";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;

---

<BaseLayout pageTitle={frontmatter.title}>

  <p><em>{frontmatter.description}</em></p>

  <p>Written by: {frontmatter.author} on {new Date(frontmatter.pubDate).toISOString().slice(0, 10)}</p>


  <Image src={frontmatter.image.url} alt={frontmatter.image.alt} width="600" height="300" style={{ objectFit: 'cover' }} format="webp" quality={'mid'}  />


  <slot />

  <Tags tags={frontmatter.tags} />
</BaseLayout>
