---
type Props = {
  tag: string;
};

const { tag } = Astro.props as Props;
---

<a href={`/tags/${tag}`}>{tag}</a>

<style>
  a {
    padding: 0.05rem 0.5rem;
    font-size: 14px;
    color: white;
    background-color: #b16148;
    text-decoration: none;
    border-radius: 4px;
    transition: all 150ms ease;
  }

  a:hover,
  a:focus {
    background-color: #883f29;
  }
</style>
